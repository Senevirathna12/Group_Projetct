@using ERP.Application.StaffApp.Interfaces.ResourceManagement
@using ERP.Domain.Core.Entity
@using Microsoft.AspNetCore.Components.Web

@inject ISnackbar Snackbar
@inject IViewResourceByNameUseCase ViewResourceByNameUseCase
@inject IDialogService DialogService

<MudDialogProvider />
<MudDialog Class="my-custom-dialog">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.PermIdentity" Class="mr-3 mb-n1" />
            View Resource
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@resource.ResourceId" Label="Resource ID" ReadOnly="true" />
        <MudTextField @bind-Value="@resource.Name" Label="Resource Name" ReadOnly="true" />
        <MudTextField @bind-Value="@resource.Type" Label="Resource Type" ReadOnly="true" />
        <MudTextField @bind-Value="@resource.Description" Label="Description" ReadOnly="true" />
        
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

<style>
    .my-custom-dialog {
        max-width: 400px;
        margin: auto;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public ERP.Domain.Core.Entity.Resource resource { get; set; } = new();

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
